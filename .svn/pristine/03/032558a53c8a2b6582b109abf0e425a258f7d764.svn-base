    	<label for="radio01" class="radio"><%= choiseList.get(0) %></label>

    	<input type="radio" name="ans<%=i %>" value="<%= choiseList.get(1) %>" id="radio02"/>
    	<label for="radio02" class="radio"><%= choiseList.get(1) %></label>

